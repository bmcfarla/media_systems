@model mamSearchAndRetrieval.Models.SimpleSearchModel

@{
    ViewBag.Title = "Simple Search";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="simple-search-form">
            @using (Html.BeginForm("Index", "Results", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>Simple Search.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.searchString, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.searchString, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.searchString, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

